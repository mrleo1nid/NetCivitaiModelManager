<UserControl
    x:Class="NetCivitaiModelManager.Views.Controls.SettingsView"
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:ctrls="using:NetCivitaiModelManager.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
	<StackPanel Orientation="Vertical">
		<ctrls:OptionsDisplayItem
	   Description="Изменить тему приложения."
	   Header="Тема"
	   Icon="DarkTheme">

			<ctrls:OptionsDisplayItem.ActionButton>
				<ComboBox
					MinWidth="150"
					Items="{Binding AppThemes}"
					SelectedItem="{Binding CurrentAppTheme}" />
			</ctrls:OptionsDisplayItem.ActionButton>
		</ctrls:OptionsDisplayItem>
		<ctrls:OptionsDisplayItem IsEnabled="False" HorizontalAlignment="Center"
		   Description="Изменить тему приложения."
		   Header="Тема">

			
		</ctrls:OptionsDisplayItem>
	</StackPanel>
</UserControl>
