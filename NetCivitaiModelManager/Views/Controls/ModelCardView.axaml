<UserControl
    x:Class="NetCivitaiModelManager.Views.Controls.ModelCardView"
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:asyncImageLoader="clr-namespace:AsyncImageLoader;assembly=AsyncImageLoader.Avalonia"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:ext="using:NetCivitaiModelManager.Extensions"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <StackPanel MinWidth="260" MinHeight="260">
        <StackPanel.Background>
            <ImageBrush ext:CustomAsyncImageLoader.Source="{Binding ImagePath}"
						Stretch="Fill"/>
        </StackPanel.Background>
        <TextBlock Text="{Binding Name}" />
    </StackPanel>
</UserControl>
