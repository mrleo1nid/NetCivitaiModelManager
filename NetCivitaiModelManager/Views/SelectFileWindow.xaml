<Window x:Class="NetCivitaiModelManager.Views.SelectFileWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:NetCivitaiModelManager.Views"
        mc:Ignorable="d"
        Title="Выбрать файл" Height="250" Width="400">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="95*"/>
            <RowDefinition Height="22*"/>
        </Grid.RowDefinitions>
        <ListBox Grid.Row="0" Margin="5,5,5,5" ItemsSource="{Binding SelectedVersion.Files}" SelectedItem="{Binding SelectedFile}">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <TextBlock Text="{Binding DisplayName}" ></TextBlock>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
        <StackPanel Margin="5,5,5,5" Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Center">
            <Button Margin="5" VerticalAlignment="Center" HorizontalAlignment="Center" Content="Скачать" Command="{Binding LoadFileCommand}"/>
            <Button Margin="5" VerticalAlignment="Center" HorizontalAlignment="Center" Content="Отмена" Command="{Binding CloseSelectFileWindowCommand}" />
        </StackPanel>
    </Grid>
</Window>
