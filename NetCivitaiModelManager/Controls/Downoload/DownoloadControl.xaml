<UserControl x:Class="NetCivitaiModelManager.Controls.Downoload.DownoloadControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:NetCivitaiModelManager.Controls.Downoload"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.Background>
        <SolidColorBrush Color="AliceBlue"/>
    </UserControl.Background>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="11*"/>
            <RowDefinition Height="8*"/>
            <RowDefinition Height="139*"/>
        </Grid.RowDefinitions>
        <local:DownoloadPanel Grid.Row="0" DataContext="{Binding}"/>
        <local:DownoloadHeader Grid.Row="1"/>
        <ListBox Margin="5" HorizontalContentAlignment="Stretch" VerticalContentAlignment="Center" Grid.Row="2"
                 ItemsSource="{Binding FileDownoloadService.Downoloads}" Background="AliceBlue" SelectionMode="Single">
            <ItemsControl.ItemTemplate>
                <DataTemplate>
                    <local:DownoloadItem HorizontalAlignment="Stretch" DataContext="{Binding}"/>
                </DataTemplate>
            </ItemsControl.ItemTemplate>
        </ListBox>
    </Grid>
</UserControl>
