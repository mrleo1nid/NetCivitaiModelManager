<UserControl x:Class="NetCivitaiModelManager.Controls.Downoload.DownoloadItem"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:NetCivitaiModelManager.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="60" d:DesignWidth="800">
    <UserControl.Background>
        <SolidColorBrush Color="Transparent"/>
    </UserControl.Background>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="60*"/>
            <ColumnDefinition Width="225*"/>
            <ColumnDefinition Width="240*"/>
            <ColumnDefinition Width="143*"/>
            <ColumnDefinition Width="132*"/>
        </Grid.ColumnDefinitions>
        <Label Grid.Column="0" Margin="5" VerticalAlignment="Center" HorizontalAlignment="Stretch" Content="{Binding Number}" />
        <Label Grid.Column="1" Margin="5" VerticalAlignment="Center" HorizontalAlignment="Stretch" Content="{Binding Name}"  />
        <ProgressBar Grid.Column="2" Margin="5" MinWidth="120"  VerticalAlignment="Center" HorizontalAlignment="Stretch" Maximum="1" Value="{Binding DownoloadProgress}"/>
    </Grid>
</UserControl>
